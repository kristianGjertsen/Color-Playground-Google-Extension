{
    "manifest_version": 3,
    "name": "Color Playground",
    "version": "0.1",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
